# Description: Waveshare ESP32-S3-Touch-AMOLED-2.06 Watch Development Board  
# Platform: ESP32-S3, Display: 2.06" AMOLED 410Ã—502 Touch, Audio, IMU, RTC

# Platform Configuration
ENV_TARGET=esp32s3
ENV_BOARD=esp32-s3-devkitc-1

# Board Identification
WISP_PLATFORM_ESP32S3=1
WISP_TARGET="ESP32S3"  
WISP_BOARD_FAMILY="WAVESHARE"
WISP_FORM_FACTOR="WATCH"

# Hardware Specifications
CPU_FREQ_MHZ=240
CPU_CORES=2
FLASH_SIZE_MB=32
SRAM_KB=512
PSRAM_SIZE_MB=8

# Display Configuration  
DISPLAY_WIDTH=410
DISPLAY_HEIGHT=502
DISPLAY_DRIVER="CO5300"
DISPLAY_INTERFACE="QSPI"
DISPLAY_COLOR_DEPTH=24
DISPLAY_TYPE="AMOLED"
DISPLAY_BRIGHTNESS=600

# Touch Configuration
TOUCH_DRIVER="FT3168"
TOUCH_INTERFACE="I2C"
TOUCH_MULTIPOINT=1

# Audio Configuration
AUDIO_CODEC="ES8311"
AUDIO_ECHO_CANCEL="ES7210"
AUDIO_MICROPHONES=2
AUDIO_SPEAKER=1

# Feature Flags
HAS_WIFI=1
HAS_WIFI6=0
HAS_BLUETOOTH=1
HAS_BLUETOOTH_LE=1
HAS_BLUETOOTH_CLASSIC=0
HAS_DISPLAY=1
HAS_TOUCH=1
HAS_CAMERA=0
HAS_AUDIO=1
HAS_MICROPHONE=1
HAS_SPEAKER=1
HAS_SD_CARD=1
HAS_RGB_LED=0
HAS_IMU=1
HAS_RTC=1
HAS_PSRAM=1

# Sensor Configuration
IMU_CHIP="QMI8658"
IMU_INTERFACE="I2C"
RTC_CHIP="PCF85063"
RTC_INTERFACE="I2C"

# Power Management
POWER_IC="AXP2101"
BATTERY_CONNECTOR="MX1.25"
BATTERY_VOLTAGE="3.7V"
POWER_MANAGEMENT_ADVANCED=1

# GPIO Pin Configuration
I2C_SDA_PIN=1
I2C_SCL_PIN=2
TOUCH_INT_PIN=3
TOUCH_RST_PIN=4

# Audio Pins
I2S_SCLK_PIN=5
I2S_LRCK_PIN=6
I2S_SDOUT_PIN=7
I2S_SDIN_PIN=8

# Control Buttons
PWR_BUTTON_PIN=9
BOOT_BUTTON_PIN=10

# Build Configuration
WISP_MINIMAL_BUILD=0
OPTIMIZE_PERFORMANCE=1
ENABLE_PSRAM=1

# Memory Configuration
CONFIG_SPIRAM_USE_CAPS_ALLOC=1
CONFIG_SPIRAM_USE_MALLOC=1

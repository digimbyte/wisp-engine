# Description: Waveshare ESP32-C6-LCD-1.47 Development Board
# Platform: ESP32-C6, Display: 1.47" IPS 172Ã—320, WiFi 6, Bluetooth 5 LE

# Platform Configuration
ENV_TARGET=esp32c6
ENV_BOARD=esp32-c6-devkitm-1

# Board Identification
WISP_PLATFORM_ESP32C6=1
WISP_TARGET="ESP32C6"
WISP_BOARD_FAMILY="WAVESHARE"

# Hardware Specifications
CPU_FREQ_MHZ=160
FLASH_SIZE_MB=4
SRAM_HP_KB=512
SRAM_LP_KB=16
PSRAM_SIZE_MB=0

# Display Configuration
DISPLAY_WIDTH=172
DISPLAY_HEIGHT=320
DISPLAY_DRIVER="ILI9341"
DISPLAY_INTERFACE="SPI"
DISPLAY_COLOR_DEPTH=16

# Feature Flags
HAS_WIFI=1
HAS_WIFI6=1
HAS_BLUETOOTH=1
HAS_BLUETOOTH_LE=1
HAS_BLUETOOTH_CLASSIC=0
HAS_DISPLAY=1
HAS_TOUCH=0
HAS_CAMERA=0
HAS_AUDIO=0
HAS_SD_CARD=1
HAS_RGB_LED=1
HAS_IMU=0
HAS_RTC=0

# GPIO Pin Configuration
LED_TYPE=3
LED_PIN=2
LED_COUNT=1
SPI_SCK_PIN=6
SPI_MOSI_PIN=7
SPI_CS_PIN=10
DISPLAY_DC_PIN=4
DISPLAY_RST_PIN=5
DISPLAY_BL_PIN=15

# Build Optimization (for memory-constrained C6)
WISP_MINIMAL_BUILD=1
OPTIMIZE_SIZE=1

# PlatformIO Specific
ENV_PLATFORMIO_BUILD_FLAGS="-Os -ffunction-sections -fdata-sections -Wl,--gc-sections"
